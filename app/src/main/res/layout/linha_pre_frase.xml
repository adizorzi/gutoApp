<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linhaPreImagens"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/linhaPreFrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imgPreFrase"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:baselineAlignBottom="false"
            android:padding="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <TextView
            android:id="@+id/txtPreTituloFrase"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_alignBottom="@+id/imgPreFrase"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/imgLista"
            app:layout_constraintEnd_toEndOf="@+id/imgLista"
            app:layout_constraintStart_toStartOf="@+id/imgLista"
            tools:text="asdfasdf" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>